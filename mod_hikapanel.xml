<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.7.5" client="administrator" method="upgrade">
    <name>Ikonki dla Hikashop</name>
    <author>Andrzej Bolewski</author>
	<authorEmail>biuro@solmedia.pl</authorEmail>
	<authorUrl>www.solmedia.pl</authorUrl>
	<creationDate>sierpień 2017</creationDate>
	<copyright>OpenSource</copyright>
    <version>1.0</version>
    <description>Ikonki dla HikaShop</description>
	
    <files>
        <filename>mod_hikapanel.xml</filename>
        <filename module="mod_hikapanel">mod_hikapanel.php</filename>
        <filename>index.html</filename>
        <filename>tmpl/default.php</filename>
        <filename>tmpl/index.html</filename>
		<folder>css</folder>
    </files>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field 	name="show_characteristic" type="radio" label="Czy pokazać charakterystykę" default="1">
					<option value="1">TAK</option>
					<option value="0">NIE</option>
				</field>
				<field 	name="name_characteristic" type="text" label="Podpis dla charakterystyki" default="Charakterystyka" required="1" />
				<field 	name="show_customfields" type="radio" label="Czy pokazać custom fields" default="1">
					<option value="1">TAK</option>
					<option value="0">NIE</option>
				</field>
				<field 	name="name_customfields" type="text" label="Podpis dla custom fields" default="Pola dodatkowe" required="1" />
			</fieldset>
		</fields>
	</config>
</extension>